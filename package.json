{
  "name": "vladikdb",
  "version": "0.1.1",
  "type": "module",
  "description": "Simple JSON database for node and browser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladpuz/vladikdb.git"
  },
  "author": "Vladislav Puzyrev",
  "license": "MIT",
  "typesVersions": {
    "*": {
      ".": [
        "build/index.d.ts"
      ],
      "node": [
        "build/node.d.ts"
      ],
      "browser": [
        "build/browser.d.ts"
      ]
    }
  },
  "exports": {
    ".": "./build/index.js",
    "./node": "./build/node.js",
    "./browser": "./build/browser.js"
  },
  "keywords": [
    "database",
    "db",
    "electron",
    "embed",
    "embedded",
    "flat",
    "json",
    "local",
    "localStorage",
    "sessionStorage",
    "browser",
    "lowdb"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "npm run typecheck && npm run lint && npm run format",
    "clean": "rimraf build",
    "format": "prettier --check .",
    "lint": "eslint .",
    "prepack": "npm run clean && npm run build && npm run check",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "steno": "^4.0.2"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "eslint-config-vladpuz": "^1.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "prettier-config-vladpuz": "^1.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
